<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topProfilePart">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bannerpic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bannerdefault"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/bioBody" />




        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/profilepic"
            android:src="@drawable/defaultpic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name Name"
            android:layout_below="@+id/profilepic"
            android:id="@+id/nameProfile"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Favourite"
            android:id="@+id/followbtn"
            android:layout_below="@+id/nameProfile"
            android:layout_centerHorizontal="true"
            android:background="#fdbd01"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginTop="20dp">
            <!--<com.github.siyamed.shapeimageview.StarImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAVOURITE"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAVOURITE"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="19dp"
                android:id="@+id/textView"
                android:layout_marginRight="110dp"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <com.github.siyamed.shapeimageview.StarImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/starBtn"
                android:layout_alignParentTop="true"

                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textView"
                android:padding="3dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bioBody"
            android:layout_below="@id/followbtn"
            android:layout_marginTop="40dp"
            android:background="#fff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bioInfo"
                android:text="Error"
                android:textSize="20dp"
                android:enabled="true"
                android:layout_margin="15dp" />

            <!--<LinearLayout
                android:layout_width="match_parent"
