<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:layout_marginTop="10dp">


        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/followerfromPic"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/followername"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/followerfromPic"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:text="Error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Error"
            android:id="@+id/followerlastonline"
            android:layout_below="@+id/followername"
            android:layout_alignStart="@+id/followername"
            android:layout_marginTop="2dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Follow"
            android:id="@+id/button3"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="#0ebb0e"
            android:textColor="#fff"
            android:textStyle="bold"
            android:singleLine="false"
            android:textSize="15dp"
            android:layout_alignTop="@+id/followername"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>