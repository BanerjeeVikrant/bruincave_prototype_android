<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/commentProfilePicOne"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Error"
            android:id="@+id/commentNameOne"
            android:layout_alignTop="@+id/commentProfilePicOne"
            android:layout_toEndOf="@+id/commentProfilePicOne"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\@Error"
            android:id="@+id/commentUsernameOne"
            android:layout_alignTop="@+id/commentNameOne"
            android:layout_toEndOf="@+id/commentNameOne"
            android:layout_marginLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:id="@+id/commentBodyOne"
            android:layout_below="@+id/commentUsernameOne"
            android:layout_alignStart="@+id/commentNameOne"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>
</RelativeLayout>