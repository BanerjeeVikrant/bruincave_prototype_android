<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.banerjee.bruincave_prototype.profile_layout"
    tools:showIn="@layout/activity_profile_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#1d2d4a"
        android:id="@+id/topBar">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/backProfile"
            android:src="@drawable/backwhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#1d2d4a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Vikrant&apos;s profile"
            android:id="@+id/textView8"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"
            android:textSize="22dp" />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profileListView"
        android:layout_alignParentStart="true"
        android:layout_below="@id/topBar"
        android:background="#e6e6e6"
        android:layout_gravity="right|center_vertical" />


</RelativeLayout>
