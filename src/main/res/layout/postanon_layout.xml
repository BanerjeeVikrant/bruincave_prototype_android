<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.banerjee.bruincave_new.messages_intent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#1d2d4a"
        android:id="@+id/topBar">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/backAnonPost"
            android:src="@drawable/backwhite"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#1d2d4a" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roar"
            android:id="@+id/btnPostCrush"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="#1d2d4a"
            android:textColor="#fff"
            android:textSize="19dp" />

    </RelativeLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:gravity="top|left"
        android:id="@+id/crushEditText"
        android:layout_below="@+id/topBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:hint="Post Anonymous Confessions"
        android:forceHasOverlappingRendering="true" />

</RelativeLayout>