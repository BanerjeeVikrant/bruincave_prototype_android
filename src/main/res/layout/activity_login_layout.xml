
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#1d2d4a">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:src="@drawable/pawlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Connect with Bruins..."
                android:id="@+id/textView6"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#fff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/lgUsername"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="40dp"
                android:hint="Username"
                android:textColorHint="#fff"
                android:autoText="false"
                android:background="@drawable/searchshape"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#fff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/lgPassword"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/searchshape"
                android:textColorHint="#fff"
                android:hint="Password"
                android:paddingLeft="15dp"
                android:layout_below="@+id/lgUsername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="#fff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Login"
                android:id="@+id/loginBtn"
                android:layout_below="@+id/lgPassword"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Forgot Password?"
                android:id="@+id/tvForgotPass"
                android:layout_below="@+id/loginBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textSize="19dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Or Register Now"
                android:id="@+id/registerStartBtn"
                android:layout_below="@+id/tvForgotPass"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#2a4c79"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
